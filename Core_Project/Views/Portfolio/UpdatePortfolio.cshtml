@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body" style="height:500px">
    <h1>Deneyimi Güncelle</h1>
    <form class="form-group" method="post">
        <input type="hidden" asp-for="PortfolioId"/>
        <br /><br />
        <label>Deneyim Başlığı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
        <br />
        <label>Görsel 1</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
        <br />
        <label>Görsel 2</label>
        <input type="text" asp-for="ImageUrl2" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl2"></span>
        <br />
        <label>Proje Url</label>
        <input type="text" asp-for="ProjectUrl" class="form-control" />
        <span class="text-danger" asp-validation-for="ProjectUrl"></span>
        <br />
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
        <br />
        <label>Değer</label>
        <input type="text" asp-for="Value" class="form-control" />
        <span class="text-danger" asp-validation-for="Value"></span>
        <br />
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>
