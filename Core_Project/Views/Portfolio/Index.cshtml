@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col">
        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
                <h3 class="mb-0">Proje Listesi</h3>
            </div>
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Proje</th>
                            <th scope="col" class="sort" data-sort="budget">Ücret</th>
                            <th scope="col" class="sort" data-sort="status">Durum</th>
                            <th scope="col">Düzenle</th>                     
                           
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.PortfolioId</th>

                                <th><strong>@item.Name</strong></th>
                                
                                <td class="budget">@item.Price</td>

                                <td>
                                   Tamamlandı
                                </td>
                                <td>
                                    <a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Sil</a>
                                    <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Güncelle</a>
                                </td>
                            </tr>
                        }                   
                    </tbody>
                </table>
                <br />
                <a href="/Portfolio/AddPortfolio" class="btn btn-primary">Yeni Proje Ekle</a>
            </div>
          
           
        </div>
    </div>
  
</div>







